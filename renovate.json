{
  "includeForks": true,
  "automerge": false,
  "branchConcurrentLimit": 2,
  "branchPrefix": "renovate-",
  "bumpVersion": "patch",
  "dependencyDashboard": true,
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.*\\.gemspec"
      ],
      "matchStrings": [
        ".*\\.add_(:?(?<depType>.*?)_)?dependency\\s*(['\"])(?<depName>[^'\"]+)(['\"])(\\s*,\\s*(?<currentValue>(['\"])[^'\"]+['\"](\\s*,\\s*['\"][^'\"]+['\"])?))?"
      ],
      "datasourceTemplate": "rubygems",
      "versioningTemplate": "ruby"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "^.*\\.gemspec"
      ],
      "rangeStrategy": "auto"
    }
  ]
}
